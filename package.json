{
	"name": "@untemps/read-per-minute",
	"version": "1.0.3",
	"author": "Vincent Le Badezet <v.lebadezet@untemps.net>",
	"license": "MIT",
	"homepage": "https://github.com/untemps/read-per-minute",
	"repository": "git@github.com:untemps/read-per-minute.git",
	"bugs": "https://github.com/untemps/read-per-minute/issues",
	"description": "Class to parse a string and return an estimated reading time based on a lang rate",
	"keywords": [
		"estimated reading time",
		"reading time",
		"class",
		"javascript"
	],
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"svelte": "./dist/index.js",
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*"
	],
	"exports": {
		".": {
			"svelte": "./dist/index.js"
		}
	},
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.2",
		"@commitlint/config-conventional": "^17.7.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.2.1",
		"@vitest/coverage-v8": "^0.34.6",
		"cross-env": "^7.0.3",
		"husky": "^8.0.3",
		"prettier": "^3.0.3",
		"semantic-release": "^22.0.5",
		"vite": "^4.4.2",
		"vitest": "^0.34.0"
	},
	"release": {
		"branches": [
			"main",
			{
				"name": "beta",
				"prerelease": true
			}
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"scope": "force",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "dist/index.js"
						}
					]
				}
			]
		]
	},
	"scripts": {
		"build": "vite build",
		"test": "vitest watch --coverage",
		"test:ci": "vitest run --coverage",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"prepare": "husky install"
	}
}
